{
  "name": "@swan-io/card-design-studio",
  "description": "Card configurator with 3D preview",
  "version": "2.0.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "yarn": "^1.22.0"
  },
  "author": "Frederic Godin <godin.fred8@gmail.com>",
  "homepage": "https://github.com/swan-io/card-design-studio",
  "repository": {
    "type": "git",
    "url": "https://github.com/swan-io/card-design-studio.git"
  },
  "workspaces": {
    "packages": [
      "client",
      "server"
    ]
  },
  "scripts": {
    "prepare": "git config --local core.hooksPath .hooks",
    "format": "prettier '**/*' --ignore-unknown --write",
    "link-locale-lake": "sh scripts/lake/link-locale-lake.sh",
    "unlink-locale-lake": "sh scripts/lake/unlink-locale-lake.sh",
    "typecheck": "tsc --noEmit",
    "dev": "tsx -r dotenv/config server/src/index.ts --dev",
    "clean": "shx rm -rf server/dist",
    "build-server": "tsc --project server/tsconfig.json",
    "build-client": "vite build --config client/vite.config.ts",
    "build": "yarn clean && yarn build-server && yarn build-client",
    "start": "node server/dist/index.js"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "**/*.{ts,tsx}": "eslint --fix"
  },
  "browserslist": [
    ">0.2%",
    "not op_mini all",
    "not dead",
    "not ie <= 11",
    "safari >= 12"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "20.8.6",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "@vitejs/plugin-legacy": "4.1.1",
    "@vitejs/plugin-react-swc": "3.4.0",
    "dotenv": "16.3.1",
    "eslint": "8.51.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-native": "4.1.0",
    "eslint-plugin-swan": "file:scripts/eslint",
    "lint-staged": "14.0.1",
    "pathe": "1.1.1",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "3.2.3",
    "terser": "5.21.0",
    "tsx": "4.7.0",
    "type-fest": "4.4.0",
    "typescript": "5.2.2",
    "valienv": "0.5.0",
    "vite": "4.4.11"
  }
}
